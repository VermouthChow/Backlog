<!DOCTYPE html>
<html>
  <head>
    <title>Backlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>

  </head>

  <body style="margin: 0;padding: 0">
    <div style="background-color: #F0F0F0;border: solid #F0F0F0;height: 70px;padding-left: 20px;margin: 0;">
      <h1 style="color: #000000; margin: 0, auto">Backlogs</h1>
      <% if @current_user %>
        <div>
          <h4>Hi, <%= @current_user.username%></h4>
          <%= link_to 'logout', '/logout', method: :delete %>
        </div>
      <% end %>

    </div>
    
    <br>
    
    <% if flash.present? %>
      <div class='bg-warning'>
        <% flash[:notice].to_a.each do |f| %>
          <li class="text-danger"><%= f %></li>
        <% end %>
      </div>
      <% flash[:notice] = nil %>
    <% end %>
    

    <%= yield %>
  </body>
</html>
