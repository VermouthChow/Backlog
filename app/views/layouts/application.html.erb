<!DOCTYPE html>
<html>
  <head>
    <title>Backlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <style type="text/css">
      
      body{
        margin: 0;
        padding: 0;
        font-family: "Arial";
        color: #333;
      }

      .top{
        position: relative;
        background-color: #F0F0F0;
        border: solid #F0F0F0;
        height: 70px;
        line-height: 35px;
        padding: 10px 70px;
        margin: 0;

      }

      .h1{
        font-size: 36px;
        font-weight: bold;
      }

      .user_info{
        position: absolute;
        right: 15px;
        top: 13px;
      }

      .user_info a{
        padding-left: 18px;
        padding-right: 18px;
        font-size: 16px;
        font-weight: bolder;
        color: #777;
      }

      .h4{
        font-size: 18px;
      }

    </style>
  </head>

  <body>
    <div class="top">
      <span class="h1">Backlogs</span>
      <% if @current_user %>
        <div class="user_info">
          <span class="h4">Hi, <%= @current_user.username%></span>
          &nbsp;&nbsp;
          <%= link_to 'logout', '/logout', method: :delete, class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
    
    <br>
    
    <% if flash.present? %>
      <div class='bg-warning'>
        <% flash[:notice].to_a.each do |f| %>
          <li class="text-danger"><%= f %></li>
        <% end %>
      </div>
      <% flash[:notice] = nil %>
    <% end %>
    

    <%= yield %>
  </body>
</html>
